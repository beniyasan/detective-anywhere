FROM python:3.11-slim

WORKDIR /app

# システムパッケージの更新とインストール
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# 依存関係ファイルをコピー
COPY requirements.txt .

# Python依存関係をインストール
RUN pip install --no-cache-dir -r requirements.txt

# アプリケーションファイルをコピー
COPY . .

# デバッグスクリプトを追加
COPY debug_imports.py .

EXPOSE 8080

# デバッグ用エントリポイント
CMD ["python", "debug_imports.py"]